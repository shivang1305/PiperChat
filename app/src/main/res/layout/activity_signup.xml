<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/signupimg"
    tools:context=".SignupActivity">

    <TextView
        style="@android:style/Widget.TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="5dp"
        android:foregroundTint="#5F0E29"
        android:text="WELCOME!!"
        android:textColorLink="#07530B"
        android:textSize="30sp"
        android:textStyle="normal|bold" />

    <EditText
        android:id="@+id/signup_name"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:layout_marginTop="10dp"
        android:hint="Name"
        android:textAlignment="center"
        android:textSize="25sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:hint="Email ID"
        android:id="@+id/signup_email"
        android:textSize="25sp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:hint="Password"
        android:id="@+id/signup_pass"
        android:textSize="25sp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/signup_usnme"
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:layout_marginTop="20dp"
        android:hint="Username"
        android:textAlignment="center"
        android:textSize="25sp" />

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I agree on Terms and Conditions"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:id="@+id/signup_checkbox"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <Button
        android:id="@+id/signup_btn"
        android:layout_width="198dp"
        android:layout_height="65sp"
        android:layout_marginLeft="30sp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#632A6D"
        android:fontFamily="sans-serif-smallcaps"
        android:text="signup"
        android:textSize="25sp" />

        <ProgressBar
            android:id="@+id/signup_progressbar"
            android:layout_width="75dp"
            android:layout_height="73dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:visibility="invisible" />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginTop="0dp"
        android:text="If you're already registered"
        android:textAlignment="center"
        android:textSize="25dp" />

    <Button
        android:id="@+id/signup_loginbtn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="126dp"
        android:layout_height="65sp"
        android:layout_marginLeft="100sp"
        android:backgroundTint="#632A6D"
        android:text="Login"
        android:textSize="25sp"
        android:visibility="visible"
        tools:visibility="visible" />


</LinearLayout>